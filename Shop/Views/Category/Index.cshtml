@{
    ViewData["Title"] = "Category";
}

@model IEnumerable<Shop.Models.Category>;

<style>
    section {
        min-height: 105vh;
    }

    .gapping {
        gap: 1rem;
    }

    .mls {
        margin-left: 40px;
    }
</style>

<div class="bs-dark">
    <section style="display:flex; flex-direction:column; gap: 1rem;">
        <div class="bs-dark-light1 p-4" style="display: flex; gap: 1rem;">
            <div class="container d-flex justify-content-center">
                @if (User.IsInRole(ENV.AdminRole))
                {
                    <a class="head-font txt-light btn bs-blue" asp-action="Create"><i class="fas fa-plus mr-2"></i> Add new category</a>
                }
                 else { 
                    <h1 class="head-font txt-light">Categories</h1>
                }
            </div>
        </div>
        <div class="d-flex justify-content-center">
            @if (Model.Count() > 0)
            {
                <div class="mb-3 container d-flex pl-lg-5 pl-md-0">
                    <div class="row d-flex gapping mls">
                        @foreach (var item in Model)
                        {
                            if (User.IsInRole(ENV.AdminRole))
                            {

                                <partial model="item" name="_devCategoryCard" />
                            }
                            else
                            {
                                <partial model="item" name="_categoryCard" />
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <h3 class="head-font txt-light">Add new category!</h3>
            }
        </div>
    </section>
</div>

