@{
    ViewData["Title"] = "Category";
}

@model IEnumerable<Shop.Models.Category>;

<div>
    <div class="container p-0 mb-3">
        <a id="addbtn" asp-controller="Category" asp-action="Create" class="btn btn-primary pl-4 pr-4">Add</a>
    </div>
    @if (Model.Count() > 0)
    {
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">ShowOrder</th>
                        <th></th>
                    </tr>
                </thead >
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.ShowOrder</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-warning text-light pl-4 pr-4" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Edit">Edit</a>
                                    <a class="btn btn-danger text-light pl-4 pr-4" asp-route-Id="@item.Id" asp-controller="Category" asp-action="Delete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    }
    else
    {
        <h1>Null</h1>
    }
</div>

