
@{
    var title = "Create new product";
}

@model Shop.Models.ViewModels.ProductVM;
<h1>Upsert</h1>
<form method="post" enctype="multipart/form-data">
    @if (Model.Product.Id != 0)
    {
        title = "Edit product";     
        <input asp-for="Product.Id" hidden />
    }
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Product.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" class="form-control" />
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.ShortDesc"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.ShortDesc" class="form-control" />
                        <span class="text-danger" asp-validation-for="Product.ShortDesc"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Description" id="summernote" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="upload" multiple class="form-control" />
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4"></div>
                    <div class="col">
                        @if(Model.Product.Id != 0) 
                        {                             
                            <img src="@ENV.imagepass@Model.Product.Image" width="100" height="100"/>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>---Select Category ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Product.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.Product.Id != 0)
                            {
                                <input type="submit" class="btn btn-success w-100" value="Update" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-success w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-warning">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        ;
    }
    <script>
      $('#summernote').summernote({
        tabsize: 2,
        height: 120,
      });
    </script>
}


