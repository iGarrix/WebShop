@{
    ViewData["Title"] = "Home Page";
}
@model Shop.Models.ViewModels.HomeVM;

<style>
    .gap {
        gap: 10px;
    }
</style>
<div class="container">
    <div class="text-center p-3">
        <button class="btn btn-dark filter-btn" data-filter="all">Show All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-dark filter-btn" data-filter="@item.Name">@item.Name</button>
        }
    </div>   
</div>
<hr />
<div class="mt-3 container">
    <div class="row mt-3 d-flex justify-content-center">
        @foreach (var item in Model.Products)
        {
            <partial model="item" name="_productCard" />
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".filter-btn").click(function () {
                let value = $(this).attr('data-filter');
                if (value == "all") {
                    $(".filter").show("1000");
                }
                else {
                    $(".filter").not("." + value).hide("3000");
                    $(".filter").filter("." + value).show("3000");
                }
            })
        })
    </script>
}

