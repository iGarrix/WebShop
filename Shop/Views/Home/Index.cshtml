<div>
    <header class="head overflow-hidden d-flex align-items-center">
        <div>
            <img src="~/Images/background.jpg" class="back" alt="Alternate Text" />
            <div class="opacity"></div>
            <nav class="navbar navbar-expand-lg navbar-dark navbarstick" style="z-index:1;">
                <partial name="_header" />
            </nav>
        </div>
        <div class="w-100 text-center">
            <h1 class="head-font txt-light">Welcome to Shop15</h1>
            <p class="item-font txt-light" style="font-size: 1.5rem">Go to the </p>
            <a href="#contentsection" class="btn txt-light item-font bs-fluidark clickme" style="font-size: 1.2rem">Click me</a>
        </div>
        <script type="text/javascript">
            window.addEventListener("scroll", function () {
                var header = document.querySelector(".navbarstick");
                header.classList.toggle("sticky", this.window.scrollY > 0)
            });
        </script>
    </header>
