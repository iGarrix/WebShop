@model Shop.Models.Category;

<style>
    .card-template-hover h6 {
        transition: .2s;
    }

    .card-template-hover:hover h6 {
        color: #56cc9d;
    }

    .bordered {
        border-bottom: 2px solid #6cc3d5;
        transition: .2s;
    }

    .bordered:hover {
        border-bottom: 2px double #56cc9d;
    }
    .btneffect:hover {
        color: white;
    }
    .hovered:hover {
        transform: scale(1.040);
    }
</style>
<div class="card bs-dark-light1 rounded prices bordered hovered" style="width: 226px;">
    <div class="card-body p-3">
        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="card-template-hover text-decoration-none text-center"><h5 class="txt-light head-font">@Model.Name</h5></a>
    </div>
    <div class="p-3">
        <div class="d-flex justify-content-center">
            <h3 class="head-font txt-warning priceitem">@Model.ShowOrder <i class="fas fa-dolly"></i></h3>
        </div>
    </div>
    <div class="card-footer p-0 pb-1">
        <div class="d-flex p-0">
            <a class="p-2 text-center bg-transparent txt-successfull rounded-0 item-font btneffect" style="width: 50%;" asp-route-Id="@Model.Id" asp-action="Edit"><i class="fas fa-edit"></i></a>
            <a class="p-2 text-center bg-transparent txt-danger rounded-0 item-font btneffect" style="width: 50%;" asp-route-Id="@Model.Id" asp-action="Delete"><i class="fas fa-trash"></i></a>
        </div>
    </div>
</div>
