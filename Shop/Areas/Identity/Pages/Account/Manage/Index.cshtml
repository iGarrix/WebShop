@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    .resendbtn {
        border: 2px dashed #56cc9d;
        color: white;
    }

        .resendbtn:hover {
            background-color: #56cc9d;
        }

    .bordereds {
        border: 2px solid #56cc9d;
    }
</style>

<div class="bs-dark" style="min-height: 100vh;">
    <div class="bs-dark-light1 p-4" style="display: flex; gap: 1rem;">
        <div class="container d-flex justify-content-center">
            <h1 class="txt-light head-font">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="container txt-light item-font mt-5 mb-5" style="max-width: 60vw">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="head-font"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.Name" class="head-font"></label>
                        <input asp-for="Input.Name" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.Surname" class="head-font"></label>
                        <input asp-for="Input.Surname" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="head-font"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.Age" class="head-font"></label>
                        <input asp-for="Input.Age" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.Gender" class="head-font"></label>
                        <select asp-for="Input.Gender" class="form-control">
                            <option disabled selected>Select Genger</option>
                            <option value="Male">Famale</option>
                            <option value="Male">Male</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.Country" class="head-font"></label>
                        <input asp-for="Input.Country" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Input.City" class="head-font"></label>
                        <input asp-for="Input.City" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="bordereds d-flex p-4 justify-content-lg-between flex-lg-row flex-md-column flex-sm-column rounded bs-dark-light1 mt-4">
                <div>
                    <h2 class="txt-light head-font m-0">Save fields</h2>
                </div>
                <button type="submit" id="update-profile-button" class="btn head-font resendbtn">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}